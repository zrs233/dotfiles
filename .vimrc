set nocompatible

" =======================================
" Display
" =======================================
set linespace=3
set ruler
set title
set cmdheight=1
set showtabline=2
set winwidth=100
set colorcolumn=80
set nowrap
set number

hi CursorLineNr guifg=#050505

" =======================================
" Theme
" =======================================
set background=dark
set guifont=Courier
syntax on
colorscheme desert

" =======================================
" Tabbing
" =======================================
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set smarttab " Smart tabbing
set autoindent
